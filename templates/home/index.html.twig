{% extends 'base.html.twig' %}
{% block title %}Accueil{% endblock %}
{% block body %}
	<div class="col-12 col-md-10 p-0 row no-gutters">
		{# bloc projets #}
		<div class="col-12 col-md-4 p-2 py-3">
			<div class="card">
				<div class="card-body p-0">
					<div class="card-title text-center p-3 m-0">
						Projets réalisés
					</div>
					<div class="d-flex justify-content-center">
						<a href="#" class="btn btn-primary">En savoir plus</a>
					</div>
				</div>
			</div>
		</div>

		{# bloc parcours #}
		<div class="col-12 col-md-4 p-2 py-3">
			<div class="card">
				<div class="card-body p-0">
					<div class="card-title text-center p-3 m-0">
						Parcours
					</div>
					<div class="d-flex justify-content-center">
						<a href="#" class="btn btn-primary">En savoir plus</a>
					</div>
				</div>
			</div>
		</div>

		{# bloc skills #}
		<div class="col-12 col-md-4 p-2 py-3">
			<div class="card">
				<div class="card-body p-0">
					<div class="card-title text-center p-3 m-0">
						Compétences
					</div><div class="accordion" id="accordionExample">
					<div class="card m-1">
						<div class="card-header text-center" id="headingOne">
							<h2 class="mb-0">
							<button class="btn" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
							Savoir-Faire
							</button>
							</h2>
						</div>
						<div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
							<div class="card-body p-0">
								<div class="row no-gutters">
									{% for skill in user.skills|filter(skill=>skill.type == 'hard') %}
									<div class="col-6 col-xl-4 p-2">
										<div class="card justify-content-end">
											<img src="/uploads/files/{{skill.logo.filename}}" class="card-img-top" alt="...">
											<div class="card-body d-flex align-items-end justify-content-center">
												<h5 class="card-title text-center skill" >{{skill.name}}</h5>
											</div>
										</div>
									</div>
									{% endfor %}
								</div>
							</div>
						</div>
					</div>
					<div class="card m-1">
						<div class="card-header text-center" id="headingTwo">
							<h2 class="mb-0">
							<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
							Outils
							</button>
							</h2>
						</div>
						<div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
							<div class="card-body p-0">
								<div class="row no-gutters">
									{% for skill in user.skills|filter(skill=>skill.type == 'tool') %}
									<div class="col-6 col-xl-4 p-2">
										<div class="card justify-content-end">
											<img src="/uploads/files/{{skill.logo.filename}}" class="card-img-top" alt="...">
											<div class="card-body d-flex align-items-end justify-content-center">
												<h5 class="card-title text-center skill" >{{skill.name}}</h5>
											</div>
										</div>
									</div>
									{% endfor %}
								</div>
							</div>
						</div>
					</div>
					<div class="card m-1">
						<div class="card-header text-center" id="headingThree">
							<h2 class="mb-0">
							<button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
							Savoir Etre
							</button>
							</h2>
						</div>
						<div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
							<div class="card-body p-0">
								<div class="row no-gutters">
									{% for skill in user.skills|filter(skill=>skill.type == 'soft') %}
									<div class="col-6 col-xl-4 p-2">
										<div class="card justify-content-end">
											<img src="/uploads/files/{{skill.logo.filename}}" class="card-img-top" alt="...">
											<div class="card-body d-flex align-items-end justify-content-center">
												<h5 class="card-title text-center skill" >{{skill.name}}</h5>
											</div>
										</div>
									</div>
									{% endfor %}
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="d-flex justify-content-center">
					<a href="#" class="btn btn-primary">En savoir plus</a>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}