<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}Welcome!{% endblock %}</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Leckerli+One&display=swap" rel="stylesheet">
	</head>
	<body>
		<div class="container-fluid  p-0">
			<div id="navbar" class="col-12 d-flex flex-md-row flex-column py-2 align-items-center justify-content-center">
				<div class="px-3">Jean Michel Tatout</div>
				<div class="px-3"><a href="{{path('app_login')}}"><i class="fas fa-laptop-code"></i></a></div>
				<div class="px-3">Developpeur Web</div>
			</div>
			<div class="row m-0">
				<div id="sidebar"class="col-12 col-md-2">
					<div class="d-flex justify-content-between">
						<div><i class="fas fa-bars"></i></div>
						<div>
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								<a href="{{path('app_logout')}}"><i class="fas fa-sign-out-alt"></i></a>
							{% else %}
								<i class="fas fa-sign-in-alt"></i>
							{% endif %}
						</div>
					</div>
					<div class="row no-gutters pt-5 mt-2">
						<div class="col-4">
							<img src="/uploads/files/moi.jpg" alt="" class="img-fluid rounded-circle">
						</div>
						<div class="col-8 pl-3 pr-2">
							<p class="mb-0 pt-2 pb-3" style="font-weight:bold;font-size:1rem;"> JM Tatout</p>
							<div class="d-flex flex-row justify-content-between"
								style="text-decoration:underline darkslategray;font-size:0.9rem;">
								<p class="mb-0"><a href="">Inbox</a></p>
								<p class="mb-0">
									<a type="button" data-toggle="modal" data-target="#exampleModal">Profile
									</a></p>
									
								</div>
							</div>
							<form class="my-4 py-4 form-inline">
								<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
							</form>
						</div>
						<div>
							<ul class="list-unstyled components">
								{% if is_granted('IS_AUTHENTICATED_FULLY') %}
									<li class="active ">
										<a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">admin</a>
										<ul class="collapse list-unstyled" id="homeSubmenu">
											<li>
												<a href="{{ path('file_index') }}">fichiers</a>
											</li>
											<li>
												<a href="{{ path('skill_index') }}">compétences</a>
											</li>
											<li>
												<a href="{{ path('project_index') }}">projets</a>
											</li>
											<li>
												<a href="{{ path('experience_index') }}">expériences</a>
											</li>
										</ul>
									</li>
								{% endif %}
								<li>
									{% if user is defined %}
										<div class="d-flex flex-row my-3" >
											<div class="pr-4"><i class="fas fa-code-branch" style="font-size:2rem;"></i></div>
											<div class="pl-2">Projets</div>
											<div class="ml-auto"><span class="badge badge-pill badge-info">{{user.projects|length}}</span></div>
										</div>
									</li>
									<li>
										<div class="d-flex flex-row my-3" >
											<div class="pr-2"><i class="fas fa-shoe-prints" style="font-size:2rem;"></i></div>
											<div class="pl-2">Parcours</div>
											<div class="ml-auto"><span class="badge badge-pill badge-info">{{user.experiences|length}}</span></div>
										</div>
									</li>
									<li>
										<div class="d-flex flex-row my-3" >
											<div class="pr-2"><i class="fas fa-graduation-cap" style="font-size:2rem;"></i></div>
											<div class="pl-2">Compétences</div>
											<div class="ml-auto"><span class="badge badge-pill badge-info">{{user.skills|length}}</span></div>
										</div>
									{% endif %}
								</li>
							</ul>
						</div>
						<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
							<div class="modal-dialog" role="document">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title" id="exampleModalLabel" style="color:black;">Contact</h5>
										<button type="button" class="close" data-dismiss="modal" aria-label="Close">
										<span aria-hidden="true">&times;</span>
										</button>
									</div>
									<div class="modal-body">
										<div class="m-2">
											<p><i class="fas fa-envelope pr-4"></i>jmtatout@gmail.com</p>
											<p><i class="fab fa-linkedin pr-4"></i>jmtatout</p>
											<p><i class="fab fa-github-square pr-4"></i>/Erkha</p>
										</div>
										
									</div>
								</div>
							</div>
						</div>
					</div>
					
					{% block body %}{% endblock %}
					
				</div>
			</div>
			{% block javascripts %}
				{{ encore_entry_script_tags('app') }}
			{% endblock %}
		</body>
	</html>